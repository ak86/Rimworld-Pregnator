<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>DNP_Pregnancy</defName>
    <label>pregnant</label>
    <debugLabelExtra>xeno</debugLabelExtra>
    <description>Embryo of aggressive reproductive organisms has implanted and gestating in victim's body, it may not kill the host but will result in indelible mental trauma.</description>
    <hediffClass>Insect_Library.Hediff_Seeded</hediffClass>
    <defaultLabelColor>(0.9, 1.0, 0.35)</defaultLabelColor>
    <isBad>true</isBad>
    <initialSeverity>0.001</initialSeverity>
    <preventsPregnancy>true</preventsPregnancy>
    <alwaysShowSeverity>true</alwaysShowSeverity>
    <makesSickThought>true</makesSickThought>
    <stages>
      <li>
        <label>implanted</label>
        <minSeverity>0</minSeverity>
        <vomitMtbDays>0.5</vomitMtbDays>
        <becomeVisible>true</becomeVisible>
      </li>
      <li>
        <label>embryo</label>
        <minSeverity>0.3</minSeverity>
        <vomitMtbDays>2.5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>gestate</label>
        <minSeverity>0.4</minSeverity>
        <hungerRateFactorOffset>0.1</hungerRateFactorOffset>
        <vomitMtbDays>2.5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>incubate</label>
        <minSeverity>0.5</minSeverity>
        <hungerRateFactorOffset>0.2</hungerRateFactorOffset>
        <vomitMtbDays>2.5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>growth</label>
        <minSeverity>0.6</minSeverity>
        <hungerRateFactorOffset>0.4</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>mature</label>
        <minSeverity>0.7</minSeverity>
        <hungerRateFactorOffset>0.1</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>giving birth</label>
        <minSeverity>0.9</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.9</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.9</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <modExtensions>
      <li Class="Insect_Library.ModExtension_Seeded">
        <tickToSpawnInsect>60000</tickToSpawnInsect>
        <postGenerateHediffs>
          <li>DNP_Postpartum</li>
        </postGenerateHediffs>
        <soundSpawned>Hive_Spawn</soundSpawned>
        <giveThought>DNP_AlienPregnancy</giveThought>
        <insects>
          <li>Megascarab</li>
          <li>Spelopede</li>
          <li>Megaspider</li>
          <li>Pregnator</li>
        </insects>
      </li>
    </modExtensions>
  </HediffDef>

  <HediffDef>
    <defName>DNP_Postpartum</defName>
    <label>postpartum weakness</label>
    <description>This poor women has been forced to give birth to an alien brood, which traumatized her physically and mentally</description>
    <hediffClass>HediffWithComps</hediffClass>
    <initialSeverity>1</initialSeverity>
    <maxSeverity>1</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>5000~8000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
        <label>postpartum weakness</label>
        <capMods>   
          <li>
            <capacity>Moving</capacity>
            <offset>-1</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>